<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnBack_Main"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:backgroundTint="#C0C0C0"
            android:padding="1dp"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="34dp"
                    android:text="아이디"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextId_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:hint="(영문 소문자/숫자, 4~16자)"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/btnCheckId_Reg"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:backgroundTint="#000000"
                    android:padding="1dp"
                    android:text="중복확인"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="34dp"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextPass_Reg"
                    style="@android:style/Widget.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:hint="(영문 대소문자/숫자/기호, 8~16자)"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000"
                    tools:ignore="SpeakableTextPresentCheck" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="34dp"
                    android:text="비밀번호 확인"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextRePass_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000"
                    tools:ignore="SpeakableTextPresentCheck" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="34dp"
                    android:text="닉네임"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextNick_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingLeft="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#8D000000"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/btnCheckNick_Reg"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:backgroundTint="#000000"
                    android:padding="1dp"
                    android:text="중복확인"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

        </LinearLayout>

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="30dp"
                android:text="휴대폰"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextPhone_Reg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:backgroundTint="#000000"
                android:ems="10"
                android:hint="' - '제외 하고 번호만 입력"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:textColor="#000000"
                android:textColorHint="#8D000000"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck" />


        </FrameLayout>

        <Button
            android:id="@+id/btnRegister_Reg"
            android:layout_width="248dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:backgroundTint="#000000"
            android:padding="1dp"
            android:text="완료"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>